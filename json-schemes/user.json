{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://api.sudomoin-pavel-news-explorer.tk/schemas/user.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 8
    }
  },
  "required": ["name", "email", "password"],
  "additionalProperties": false
}